prefix=@CMAKE_INSTALL_PREFIX@
exec_prefix=${prefix}
libdir=${prefix}/@CMAKE_INSTALL_LIBDIR@
includedir=${prefix}/@CMAKE_INSTALL_INCLUDEDIR@

Name: XMPToolkit
Description: Adobe XMP Toolkit - Extensible Metadata Platform SDK
Version: @PROJECT_VERSION@
URL: https://www.adobe.com/devnet/xmp.html

Requires: expat zlib
Libs: -L${libdir} -lXMPFilesStatic -lXMPCoreStatic
Libs.private: -lexpat -lz -lpthread
Cflags: -I${includedir}/xmp -DXMP_StaticBuild=1 @XMP_PC_CFLAGS@
